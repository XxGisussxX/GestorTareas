<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.gestortareas.controller.DialogoTareaController"
          stylesheets="/styles/styles.css"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Etiquetas y campos -->
    <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="DescripciÃ³n:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextArea fx:id="txtDescripcion" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Fecha:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Hora Inicio:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <ComboBox fx:id="comboHoraInicio" prefWidth="70" />
        <Label text=":" />
        <ComboBox fx:id="comboMinutoInicio" prefWidth="70" />
    </HBox>

    <Label text="Hora Fin:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <ComboBox fx:id="comboHoraFin" prefWidth="70" />
        <Label text=":" />
        <ComboBox fx:id="comboMinutoFin" prefWidth="70" />
    </HBox>

    <Label text="Prioridad:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <ComboBox fx:id="comboPrioridad" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <!-- Botones -->
    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button fx:id="btnCancelar" text="Cancelar" onAction="#handleCancelar" />
        <Button fx:id="btnGuardar" text="Guardar" onAction="#handleGuardar" styleClass="button-primary" />
    </HBox>
</GridPane>